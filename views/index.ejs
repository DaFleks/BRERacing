<%- include('partials/header') %>

<div class="container">
    <div class="row">
        <!-- PRODUCT LIST -->
        <div class="col-12 px-4">
            <div class="row">
                <!-- PRODUCT -->
                <% products.forEach((product) => { %>
                <div class="col-6 col-md-4 col-lg-2 mb-4">
                    <!-- PRODUCT IMAGE 1-->
                    <div class="img-div mb-4 rounded border shadow
                    d-flex align-items-center justify-content-center"
                    onclick="location.href='/products/<%= product._id %>';">
                        <img src="/images/products/<%= product._id %>/<%= product.image %>"
                            class="img-fluid" alt="<%= product.name %>">
                    </div>

                    <!-- PRODUCT IMAGE 2
                    <div class="img-div mb-4 rounded
                    d-flex align-items-center justify-content-center">
                        <img src="/images/products/<%= product._id %>/<%= product.image %>"
                            class="img-fluid rounded shadow" alt="<%= product.name %>">
                    </div> -->

                    <!-- PRODUCT NAME -->
                    <div class="pName">
                        <h6><a class="text-decoration-none text-dark" href="/products/<%= product._id %>">
                                <%= product.name %>
                            </a>
                        </h6>
                    </div>

                    <!-- PRODUCT PRICE-->
                    <div class="pPrice text-success">
                        <h5>$<%= product.price %></h5>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>