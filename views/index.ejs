<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-12">
        <%- include('partials/flash') %>
    </div>
    <% products.forEach((product) => { %>
    <% if (product.published) { %>
    <div class="col-12 col-md-6 col-lg-4">
        <div class="card mb-4 px-3 pt-3 border-top shadow" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-4 col-md-12">
                    <div class="product-img border rounded bg-light">
                        <img src="/images/products/<%= product._id %>/<%= product.image %>" class="my-auto">
                    </div>
                </div>
                <div class="col-8 col-md-12 mt-md-3">
                    <div class="card-body p-0 ps-3 ps-md-0">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text"><%= product.details %></p>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row g-0">
                <div class="col-6 my-auto">
                    <div class="row">
                        <div class="col-12 mb-1">
                            <h6 class="mb-0">
                                <% if (product.stock > 0) { %>
                                Stock: <span class="text-success"><%= product.stock %></span>
                                <% } else { %>
                                <span class="text-danger">Out of Stock</span>
                                <% } %>
                            </h6>
                        </div>
                        <div class="col-12">
                            <% if (!product.isDiscounted) { %>
                            <h1 class="d-md-none text-success">$<%= product.price.toFixed(2) %></h1>
                            <h4 class="d-none d-md-block text-success">$<%= product.price.toFixed(2) %></h4>
                            <% } else { %>
                            <h1 class="d-md-none">
                                <span class="text-danger text-decoration-line-through">$<%= product.price.toFixed(2) %></span>
                                <span class="text-success">$<%= product.discountedPrice.toFixed(2) %></span>
                            </h1>
                            <h4 class="d-none d-md-block">
                                <span class="text-danger text-decoration-line-through">$<%= product.price %></span>
                                <span class="text-success">$<%= product.discountedPrice.toFixed(2) %></span>
                            </h4>
                            <% } %>
                        </div>
                    </div>
                </div>

                <div class="col-6 mb-3">
                    <form action="/cart" method="POST">
                        <input type="hidden" name="productID" id="productID-<%= product._id%>" value=<%= product._id%>>
                        <div class="row">
                            <div class="col-12 mb-3">
                                <input type="number" class="form-control text-center" min="1" name="quantity"
                                    id="quantity-<%= product._id %>" value="1">
                            </div>
                            <div class="col-12">
                                <div class="d-grid gap-2">
                                    <input type="hidden" value=<%= product._id %>>
                                    <button class="btn btn-success add-to-cart">
                                        <i class="fas fa-cart-plus"></i>&#160;&#160;Add to Cart
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <% }}) %>
</div>