<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-12 px-3 mx-auto">
        <h1><i class="fas fa-archive"></i>&#160;&#160;Order <%= order.orderNumber %></h1>
        <button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
        <hr>
    </div>
    <div class="col-12">
        <form action="">
            <div class="row">
                <div class="col-6 mb-5">
                    <h6>Order Date:</h6>
                    <p class="mb-0"><%= order.createdAt.toLocaleString('en-US') %></p>
                </div>
                <div class="col-6">
                    <div class="row">
                        <div class="col-6 offset-6">
                            <h6>Order Status:</h6>
                            <select id="status" name="status" class="form-select" aria-label="Default select example">
                                <option value="Processing" <% if (order.orderStatus === 'Processing') { %> selected <% } %>>
                                    Processing</option>
                                <option value="Shipped" <% if (order.orderStatus === 'Shipped') { %> selected <% } %>>Shipped
                                </option>
                                <option value="Canceled" <% if (order.orderStatus === 'Canceled') { %> selected <% } %>>Canceled
                                </option>
                                <option value="Hold" <% if (order.orderStatus === 'Hold') { %> selected <% } %>>Hold
                                </option>
                            </select>
                        </div>
                    </div>

                </div>
                <div class="col-4 mb-5">
                    <h6>First Name:</h6>
                    <input type="text" class="form-control" name="firstName" id="firstName"
                        value="<%= order.firstName %>">
                </div>
                <div class="col-4">
                    <h6>Last Name:</h6>
                    <input type="text" class="form-control" name="lastName" id="lastName" value="<%= order.lastName %>">
                </div>
                <div class="col-4">
                    <h6>Email:<h6>
                    <input type="text" class="form-control" name="email" id="email" value="<%= order.email %>">
                </div>
                <div class="col-4 mb-5">
                    <h6>Street:</h6>
                    <input type="text" class="form-control" name="street" id="street" value="<%= order.street %>">
                </div>
                <div class="col-2">
                    <h6>City:</h6>
                    <input type="text" class="form-control" name="city" id="city" value="<%= order.city %>">
                </div>
                <div class="col-2">
                    <h6>State / Prov:</h6>
                    <input type="text" class="form-control" name="state" id="state" value="<%= order.state %>">
                </div>
                <div class="col-2">
                    <h6>Zip / Postal:</h6>
                    <input type="text" class="form-control" name="zip" id="zip" value="<%= order.zip %>">
                </div>
                <div class="col-2">
                    <h6>Country:</h6>
                    <input type="text" class="form-control" name="country" id="country" value="<%= order.zip %>">
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th class="text-center">LIN</th>
                                    <th class="text-center">Name</th>
                                    <th class="text-center">SKU</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-center">Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% order.orderItems.forEach((orderItem) => { %>
                                <tr>
                                    <td class="text-center" t><%= orderItem.lin %></td>
                                    <td class="text-center" t><%= orderItem.name %></td>
                                    <td class="text-center"><%= orderItem.sku %></td>
                                    <td class="text-center"><%= orderItem.quantity %></td>
                                    <td class="text-center"><%= orderItem.price %></td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <%= order.shippingCost %>
                    <%= order.subtotal %>
                    <%= order.total %>
                </div>
            </div>
        </form>
    </div>
</div>