<div id="cartModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="d-flex justify-content-between">
                    <h3 class="mb-0"><i class="fas fa-shopping-cart"></i>&#160;&#160;Cart (<span
                            id="cartQty"></span>)</h3>
                    <button type="button" class="btn-close my-auto" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <hr>
                <div class="table-responsive">
                    <table id="checkoutTable" class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th class="text-center">SKU</th>
                                <th class="text-center">Quantity</th>
                                <th class="text-end">Price</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="cartBody">
                        </tbody>
                        <tfoot>
                            <tr class="fw-bold">
                                <td class="py-3">Subtotal:</td>
                                <td></td>
                                <td></td>
                                <td class="py-3 text-end text-success"><span id="subtotal"></span></td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div class="d-flex">
                    <div class="ms-auto">
                        <button id="emptyCart" class="btn btn-secondary me-2">
                            <i class="fas fa-trash-alt"></i>&#160;&#160;Empty Cart
                        </button>
                        <button class="btn btn-primary" onclick="location.href='/checkout';">
                            <i class="fas fa-cash-register"></i>&#160;&#160;Checkout
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>