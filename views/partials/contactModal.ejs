<div id="contactModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="d-flex justify-content-between">
                    <h3 class="mb-0"><i class="fas fa-envelope"></i>&#160;&#160;Contact</h3>
                    <button type="button" class="btn-close my-auto" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <hr>
                <form id="contact-form" action="/contact" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="email" class="fw-bold form-label">Email</label>
                        <input type="email" name="email" id="email" class="form-control" <% if (currentUser) { %>
                            value=<%= currentUser.email %> <% } %> required>
                        <div class="invalid-feedback">
                            Please provide a valid email address.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="subject" class=" fw-bold form-label">Subject</label>
                        <input type="text" name="subject" id="subject" class="form-control" required>
                        <div class="invalid-feedback">
                            Please provide a subject.
                        </div>
                    </div>
                    <div class="mb-4">
                        <label for="message" class=" fw-bold form-label">Message</label>
                        <div class="mb-3" style="font-size: 0.8rem;">
                            Please include your <span class="fw-bold">order number</span> if necessary.</div>
                        <div id="message" style="height: 200px;"></div>
                        <div class="invalid-feedback">
                            Please include a message in your email.
                        </div>
                    </div>
                    <div class="d-md-none d-grid gap-2">
                        <button type="submit" value="submit" class="btn btn-success">
                            <i class="fas fa-paper-plane"></i>&#160;&#160;Send
                        </button>
                    </div>
                    <div class="d-none d-md-block">
                        <div class="d-flex">
                            <button type="submit" value="submit" class="btn btn-success ms-auto">
                                <i class="fas fa-paper-plane"></i>&#160;&#160;Send
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>