<div id="loginModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="d-flex justify-content-between">
                    <h3 class="mb-0"><i class="fas fa-sign-in-alt"></i>&#160;&#160;Log In</h3>
                    <button type="button" class="btn-close my-auto" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <hr>
                <form action="/login" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" id="email">
                    </div>
                    <div class="mb-5">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control mb-3" name="password" id="password">
                        <a href="#" class="text-decoration-none">Forgot Password?</a>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-check mt-1">
                            <input type="checkbox" class="form-check-input" name="remember" id="remember">
                            <label class="form-check-label" for="remember">
                                Remember Me
                            </label>
                        </div>
                        <button class="btn btn-primary "><i class="fas fa-sign-in-alt"></i>&#160;&#160;Log
                            In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>